@using PagedList
@using PagedList.Mvc
@model IPagedList<MVC_Model.Article>

@{
    ViewBag.Title = "Hot";
}

<h2>Hot</h2>

@section nav{
    <ol class="breadcrumb">
        <li><a href="@Url.Action("Index", "Home")">Home</a></li>
        <li class="active">熱門文章</li>
    </ol>
    <div class="row">
        <div class="col-lg-12">
            <div class="col-lg-4"></div>
            <div class="col-lg-3 col-lg-offset-5">
                <form class="form-inline text-right" role="form">
                    <div class="form-group">
                        @Html.DropDownList("categoryID", (SelectList)ViewBag.ArticleCategories, "全部文章", new { @class = "form-control"})
                    </div>
                    <button type="submit" class="btn btn-default">搜尋</button>
                </form>

            </div>
        </div>
    </div>
}


<div class="row">
    <div class="container">
        <div class="col-lg-12">
          
            @Html.Partial("_Listitem", Model)

            @Html.PagedListPager(
                Model,
                page => Url.Action("Hot", new { categoryID = @ViewBag.CategoryID, page = page})
            )

        </div>
    </div>
</div>
