@model IEnumerable<MVC_Model.Article>

@foreach (var item in Model)
{
    var photo = item.Photos.FirstOrDefault();
    var url = photo == null
        ? ""
        : "http://localhost:2020" + Url.Action("ArticlePhoto", "Articles", new { id = photo.ID, w = 250, h = 250, fit = true });


    <h1>@item.Subject</h1>

    <div class="col-xs-6 col-md-3">
        <a href="#" class="thumbnail">
            <img src="@url" alt="@(photo == null ? "" : photo.FileName)">
        </a>
    </div>
    <div class="col-xs-6 col-md-9">
        <p>
            「@(item.Summary)」
        </p>

        <div>
            <span class="badge">Posted @(item.PublishDate)</span>
            <div class="pull-right">
                <a class="btn btn-primary btn-sm" href="@Url.Action("Details", "Article", new {id=@item.ID })">
                    <span class="glyphicon glyphicon-star"></span> 觀看更多!!
                </a>
            </div>
        </div>
    </div>
    <div class="clearfix"></div>
    <hr>
}

